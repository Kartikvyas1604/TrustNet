# ==============================================
# TrustNet Frontend Environment Configuration
# ==============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control
# ==============================================

# ----------------------------------------------
# Backend API Configuration
# ----------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WS_URL=ws://localhost:5001

# Production:
# NEXT_PUBLIC_API_URL=https://api.trustnet.io
# NEXT_PUBLIC_WS_URL=wss://api.trustnet.io

# ----------------------------------------------
# Blockchain Configuration
# ----------------------------------------------
# Ethereum Mainnet
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_ETHEREUM_RPC=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY

# For testing on Sepolia:
# NEXT_PUBLIC_CHAIN_ID=11155111
# NEXT_PUBLIC_ETHEREUM_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Optimism (for Uniswap v4)
NEXT_PUBLIC_OPTIMISM_CHAIN_ID=10
NEXT_PUBLIC_OPTIMISM_RPC=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Sui Network
NEXT_PUBLIC_SUI_NETWORK=testnet
NEXT_PUBLIC_SUI_RPC=https://fullnode.testnet.sui.io

# ----------------------------------------------
# Wallet Connection
# ----------------------------------------------
# Get project ID from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# MetaMask Deep Link
NEXT_PUBLIC_METAMASK_DEEPLINK=https://metamask.app.link

# ----------------------------------------------
# Smart Contract Addresses
# ----------------------------------------------
# Update after deployment
NEXT_PUBLIC_ORGANIZATION_REGISTRY=0x...
NEXT_PUBLIC_PRIVACY_POOL=0x...
NEXT_PUBLIC_PAYROLL_DISTRIBUTOR=0x...
NEXT_PUBLIC_PRIVACY_POOL_HOOK=0x...

# ENS Registry (Mainnet)
NEXT_PUBLIC_ENS_REGISTRY=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e

# ----------------------------------------------
# Feature Flags
# ----------------------------------------------
NEXT_PUBLIC_ENABLE_ZK_PROOFS=true
NEXT_PUBLIC_ENABLE_YELLOW_NETWORK=true
NEXT_PUBLIC_ENABLE_UNISWAP_PRIVACY=true
NEXT_PUBLIC_ENABLE_ENS=true

# ----------------------------------------------
# Analytics (Optional)
# ----------------------------------------------
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ----------------------------------------------
# Error Tracking (Optional)
# ----------------------------------------------
# Sentry
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
# SENTRY_AUTH_TOKEN=your_sentry_auth_token
# SENTRY_ORG=your-org
# SENTRY_PROJECT=trustnet-frontend

# ----------------------------------------------
# IPFS Configuration (Optional)
# ----------------------------------------------
# For decentralized storage
# NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
# NEXT_PUBLIC_PINATA_API_KEY=your_pinata_key
# NEXT_PUBLIC_PINATA_SECRET=your_pinata_secret

# ----------------------------------------------
# UI/UX Settings
# ----------------------------------------------
# Theme
NEXT_PUBLIC_DEFAULT_THEME=light

# Supported languages
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,es,fr,de

# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# ----------------------------------------------
# Development Tools
# ----------------------------------------------
# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# Show verbose logs
NEXT_PUBLIC_VERBOSE_LOGS=false

# Mock API responses (for development without backend)
NEXT_PUBLIC_MOCK_API=false

# ----------------------------------------------
# Rate Limiting (Client-side)
# ----------------------------------------------
# Max requests per minute
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=30

# ----------------------------------------------
# WebSocket Configuration
# ----------------------------------------------
# Reconnection attempts
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5

# Reconnection delay (ms)
NEXT_PUBLIC_WS_RECONNECT_DELAY=3000

# ----------------------------------------------
# Transaction Settings
# ----------------------------------------------
# Default gas limit
NEXT_PUBLIC_DEFAULT_GAS_LIMIT=300000

# Gas price multiplier (for faster transactions)
NEXT_PUBLIC_GAS_PRICE_MULTIPLIER=1.1

# Transaction confirmation blocks
NEXT_PUBLIC_CONFIRMATION_BLOCKS=2

# ----------------------------------------------
# Security Settings
# ----------------------------------------------
# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# Subresource Integrity
NEXT_PUBLIC_SRI_ENABLED=true

# ----------------------------------------------
# SEO & Metadata
# ----------------------------------------------
NEXT_PUBLIC_SITE_NAME=TrustNet
NEXT_PUBLIC_SITE_URL=https://trustnet.io
NEXT_PUBLIC_SITE_DESCRIPTION=Enterprise Privacy Payroll Platform
NEXT_PUBLIC_SITE_TWITTER=@trustnet

# ----------------------------------------------
# API Timeouts
# ----------------------------------------------
# Default API timeout (ms)
NEXT_PUBLIC_API_TIMEOUT=10000

# Upload timeout (ms)
NEXT_PUBLIC_UPLOAD_TIMEOUT=30000

# ----------------------------------------------
# Pagination
# ----------------------------------------------
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# ----------------------------------------------
# File Upload
# ----------------------------------------------
# Max file size (bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file types
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/png,image/jpeg,application/pdf

# ----------------------------------------------
# Cache Configuration
# ----------------------------------------------
# Browser cache duration (seconds)
NEXT_PUBLIC_CACHE_DURATION=300

# Service worker enabled
NEXT_PUBLIC_SW_ENABLED=true

# ----------------------------------------------
# Third-Party Services
# ----------------------------------------------
# Alchemy API Key (for blockchain data)
NEXT_PUBLIC_ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY

# Etherscan API Key (for transaction verification)
NEXT_PUBLIC_ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# CoinGecko API (for price feeds)
NEXT_PUBLIC_COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY
